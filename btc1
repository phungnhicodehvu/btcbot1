import requests
from telegram import Bot

# G·∫Øn c·ª©ng token v√† chat ID ·ªü ƒë√¢y (n·∫øu kh√¥ng d√πng bi·∫øn m√¥i tr∆∞·ªùng)
BOT_TOKEN = "7620720449:AAHfU3UYa5WzAjqMrM28l5AizGn0CABZ4Us"
CHAT_ID = "2121890645"

# H√†m l·∫•y gi√° BTC t·ª´ CoinGecko
def get_btc_price():
    url = "https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd"
    response = requests.get(url)
    data = response.json()
    return data["bitcoin"]["usd"]

# H√†m g·ª≠i tin nh·∫Øn Telegram
def send_btc_price():
    price = get_btc_price()
    message = f"üí∞ Gi√° BTC hi·ªán t·∫°i: ${price}"
    bot = Bot(token=BOT_TOKEN)
    bot.send_message(chat_id=CHAT_ID, text=message)

# G·ªçi bot
print("üöÄ Bot ƒëang ch·∫°y...")
send_btc_price()
